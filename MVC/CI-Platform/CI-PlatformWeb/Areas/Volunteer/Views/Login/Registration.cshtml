@model VMUserRegistration
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}
<div class="w-100 px-5 py-2 privacy d-flex align-items-center reg-responsive">
    <form method="post" class="w-100 mt-3 mt-lg-0 validform">
        <div class="mb-3 mb-lg-2">
            <label asp-for="FirstName" class="form-label fs-7">First Name<span class="fs-7 text-validation-error"> *</span></label>
            <input type="text" asp-for="FirstName" id="fname" class="form-control fs-7" placeholder="Name">
            <span asp-validation-for="FirstName" class="fs-7 text-validation-error"></span>
        </div>
        <div class="mb-3 mb-lg-2">
            <label asp-for="LastName" class="form-label fs-7">Last Name<span class="fs-7 text-validation-error"> *</span></label>
            <input type="text" asp-for="LastName" id="lname" class="form-control fs-7" placeholder="Surname"
                   onkeyup="checkName('lname')" onblur="checkName('lname')">
            <span asp-validation-for="LastName" class="fs-7 text-validation-error"></span>
        </div>
        <div class="mb-3 mb-lg-2">
            <label asp-for="MobileNo" class="form-label fs-7">Phone Number<span class="fs-7 text-validation-error"> *</span></label>
            <input type="text" asp-for="MobileNo" id="phone" class="form-control fs-7 phone"
                   placeholder="+91-9876543210">
            <span asp-validation-for="MobileNo" class="fs-7 text-validation-error"></span>
        </div>
        <div class="mb-3 mb-lg-2">
            <label asp-for="Email" class="form-label fs-7">Email Address<span class="fs-7 text-validation-error"> *</span></label>
            <input type="email" asp-for="Email" id="email-id" class="form-control fs-7"
                   placeholder="abc@xyz.com">
            <span asp-validation-for="Email" class="fs-7 text-validation-error"></span>
        </div>
        <div class="position-relative">
            <label asp-for="Password" class="form-label">New Password<span class="fs-7 text-validation-error"> *</span></label>
            <input type="password" class="form-control" asp-for="Password" id="new-pass"
                   placeholder="**********">
            <span onclick="showPass('new-pass')">
                <img src="~/images/eye_open.png" alt="eye" class="eye" id="eye-open">
                <hr class="eye_close visually-hidden" id="eye_close-new-pass" />
            </span>
        </div>
        <span asp-validation-for="Password" id="pass-limit-error" class="fs-7 text-validation-error"></span>
        <div class="mt-3 mt-lg-2 position-relative">
            <label asp-for="CnfPassword" class="form-label">Confirm New Password<span class="fs-7 text-validation-error"> *</span></label>
            <input type="password" class="form-control" asp-for="CnfPassword" id="cnf-pass"
                   placeholder="**********">
            <span onclick="showPass('cnf-pass')">
                <img src="~/images/eye_open.png" alt="eye" class="eye" id="eye-open">
                <hr class="eye_close visually-hidden" id="eye_close-cnf-pass" />
            </span>
        </div>
        <span asp-validation-for="CnfPassword" id="pass-error" class="fs-7 text-validation-error"></span>
        <button type="submit" id="regi" class="btn-ci-primary mt-3 mt-lg-2 w-100">Register</button>
        <div class="text-center">
            <label class="mt-3 mt-lg-2"><a asp-area="Volunteer" asp-controller="Login" asp-action="ForgotPass">Lost your password?</a></label>
            <br>
            <label class="fs-6 mt-3 mt-lg-2">
                Already registered?<a asp-area="Volunteer" asp-controller="Login" asp-action="Index">
                    Login
                    now
                </a>
            </label>
        </div>
    </form>
</div>