@{
    ViewData["Title"] = "Mission_volunteering";
}
@model VMMissionVol
<link rel="stylesheet" href="~/css/mission_volunteer.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/mission_page.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/img.css" asp-append-version="true">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script>
    $(document).ready(()=>{
    $.ajax({
            type: 'POST',
            url: "/Volunteer/Mission/FilterMissions",
            data: { 'pg': 1, 'id': 4,'search': "", 'country': "", 'cities': "", 'theme': "@Model.mission.Theme.Title", 'skill': "" },
            success: function (res) {
                $('#relatedmission').html($($.parseHTML(res)).filter("#gridviewpartial")[0].innerHTML);
            },
            error: function (data) {
                toastr.error("Some Error In FilterMission", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    volpag(1);
    });
</script>
<partial name="filter" />

<partial name="secondNav" />

<partial name="RecommendedMissionModel" />

<div class="container-lg container-fluid">
    <div class="row">
        <div class="col-lg-6 col-12 p-0 position-relative">
            <div id="carouselExampleIndicators" class="carousel h-80 slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    @{
                        var Count1 = 0;
                    }
                    @foreach (var j in Model.missionMedia)
                    {
                        Count1 += 1;
                        <div class="carousel-item @(Count1 == 1 ? "active" : "") h-100">
                            <img src="~/images/@j.MediaPath/@j.MediaName.@j.MediaType" class="card-img-top d-block w-100 h-100" alt="..." />
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <div class="carousel-indicators" style="margin-bottom: -70px;">
                    @{
                        var Count2 = 0;
                    }
                    @foreach (var j in Model.missionMedia)
                    {
                        Count2 += 1;
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@(Count2-1)" class="active"
                                aria-current="true" aria-label="Slide @(Count2+1)" style="width: 100px; height: 50px;">
                            <img class="d-block w-100 h-100" src="~/images/@j.MediaPath/@j.MediaName.@j.MediaType" class="img-fluid" />
                        </button>
                    }
                </div>
            </div>
        </div>



        <div class="col-lg-6 col-12 text-muted ps-lg-5 py-3 py-md-0 mt-lg-5 mt-sm-3 mt-4">
            <div class="vol-title mb-4">
                <h3>@Model.mission.Title</h3>
                <p class="p-0 m-0 fs-7">
                    @Model.mission.Description
                </p>
            </div>
            <div class="position-relative mb-4">
                <hr class="my-2 border">
                <div class="timeline">
                    <div class="fs-7">
                        @if (Model.mission.MissionType == "TIME")
                        {

                            @: From @Model.mission.StartDate.Value.ToShortDateString() until @Model.mission.EndDate.Value.ToShortDateString()
                        }
                        else
                        {
                            @if (Model.goalMissions != null)
                            {
                                @Model.goalMissions.GoalObjectiveText
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="d-flex w-100 mt-3">
                <div class="d-flex align-items-center justify-content-around h-100 w-50">
                    <div class="px-2 w-50 text-end">
                        <img src="~/images/Seats-left.png" alt="">
                    </div>
                    <div class="w-50">
                        <h6 class="p-0 m-0">@(Model.mission.TotalSeat - Model.volunteerDetails.Count())</h6>
                        <span class="fs-7">Seats left</span>
                    </div>
                </div>
                @{
                    var a1 = Model.timesheet.Sum(x => x.Action);
                    var b1 = Model.goalMissions?.GoalValue;
                    var avg = Convert.ToDouble(a1) / Convert.ToDouble(b1) * 100;
                }
                <div class="d-flex align-items-center h-100 w-50">
                    @if (@Model.mission.MissionType == "TIME")
                    {
                        <div class="px-2 w-25 text-end">
                            <img src="~/images/deadline.png" alt="">
                        </div>
                        <div class="w-50">
                            <div class="deadline">
                                <h6 class="p-0 m-0">@Model.mission.StartDate.Value.AddDays(-1).ToShortDateString()</h6>
                                <span class="fs-7">Deadline</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        if (Model.goalMissions != null)
                        {
                            <div class="px-2 w-25 text-end">
                                <img src="~/images/achieved.png" alt="">
                            </div>
                            <div class="w-75">
                                <div class="progress w-75">
                                    <div class="progress-bar bg-ci-primary" role="progressbar" style="width: @avg%"
                                         aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="fs-7">@a1 Achieved</span>
                            </div>
                        }
                    }
                </div>
            </div>
            <hr class="my-2 border border-secondary">
            <div class="vol-buttons w-100 d-flex justify-content-between">
                <button class="@(Model.favoriteMission!=null ? "border-danger":"") d-flex fav-btn justify-content-center align-items-center btn-ci-secondary w-50 m-1 px-0 text-secondary fs-7" onclick="favunfavmissionvol(@Model.mission.MissionId)">
                    @if (Model.favoriteMission != null)
                    {
                        <img src="~/images/red_heart.png" alt="" class="me-1">
                        <span class="d-none d-sm-block d-md-none d-xl-block text-ci-danger">
                            Remove from Favourite
                        </span>
                    }
                    else
                    {
                        <img src="~/images/heart1.png" alt="" class="me-1">
                        <span class="d-none d-sm-block d-md-none d-xl-block">
                            Add to Favourite
                        </span>
                    }
                </button>
                <button class="send-mission-id d-flex share-btn justify-content-center align-items-center btn-ci-secondary w-50 m-1 px-0 text-secondary fs-7" data-bs-toggle="modal" data-bs-target="#mailmissionmodal" data-id="@Model.mission.MissionId">
                    <img src="~/images/add1.png" alt="" class="me-1">
                    <span class="d-none d-sm-block d-md-none d-xl-block">
                        Recommend to a Co-Worker
                    </span>
                </button>
            </div>
            <div class="position-relative mt-4">
                <hr class="border border-secondary">
                <div class="star">
                    @if (Model.missionRating != null)
                    {
                        <div class="ratboxif">
                            @for (int i = 1; i <= 5; i++)
                            {
                                @if (Model.missionRating.Rating >= i)
                                {
                                    <a role="button" title="@i star rating" onclick="missionrating(@Model.mission.MissionId,@i)"><img src="~/images/selected-star.png" alt=""></a>
                                }
                                else
                                {
                                    <a role="button" title="@i star rating" onclick="missionrating(@Model.mission.MissionId,@i)"><img src="~/images/star.png" alt=""></a>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="ratbox">
                            <a role="button" id="rat1" title="five star rating"><img src="~/images/star-empty.png" alt="5" onclick="missionrating(@Model.mission.MissionId,5)"></a>
                            <a role="button" id="rat2" title="four star rating"><img src="~/images/star-empty.png" alt="4" onclick="missionrating(@Model.mission.MissionId,4)"></a>
                            <a role="button" id="rat3" title="three star rating"><img src="~/images/star-empty.png" alt="3" onclick="missionrating(@Model.mission.MissionId,3)"></a>
                            <a role="button" id="rat4" title="two star rating"><img src="~/images/star-empty.png" alt="2" onclick="missionrating(@Model.mission.MissionId,2)"></a>
                            <a role="button" id="rat5" title="one star rating"><img src="~/images/star-empty.png" alt="1" onclick="missionrating(@Model.mission.MissionId,1)"></a>
                        </div>
                    }
                </div>
            </div>
            <div class="row g-2">
                <div class="col-6 col-sm-3 col-md-6 col-lg-3 vol-mission-detail">
                    <div class="h-100 w-100 border p-2 position-relative">
                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/pin1.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">City</div>
                            <div class="line-h">@Model.cities.Where(x => x.CityId == Model.mission.CityId).Select(x => x.Name).FirstOrDefault()</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-sm-3 col-md-6 col-lg-3 vol-mission-detail">
                    <div class="h-100 w-100 border p-2 position-relative">
                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/web.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">Theme</div>
                            <div class="line-h">@Model.themes.Where(x => x.MissionThemeId == Model.mission.ThemeId).Select(x => x.Title).FirstOrDefault()</div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-sm-3 col-md-6 col-lg-3 vol-mission-detail">
                    <div class="h-100 w-100 border p-2 position-relative">
                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/calender.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">Date</div>
                            <div class="line-h">
                                @if (Model.mission.MissionType.Equals("GOAL") && avg < 100)
                                {
                                    @:Ongoing Opportunity
                                }
                                else if (Model.mission.StartDate < DateTime.Now && Model.mission.EndDate > DateTime.Now && Model.mission.MissionType.Equals("TIME"))
                                {
                                    @:Ongoing Opportunity
                                }
                                else
                                {
                                    @Model.mission.StartDate.Value.ToShortDateString() @:To @Model.mission.EndDate.Value.ToShortDateString()
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-sm-3 col-md-6 col-lg-3 vol-mission-detail">
                    <div class="h-100 w-100 border p-2 position-relative">
                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/organization.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">Organization</div>
                            <div class="line-h">@Model.mission.OrganizationName</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-100 text-center mt-3">
                @if (Model.missionApplicatoin != null)
                {
                    <button class="btn-ci-success" disabled>
                        Already Applied
                    </button>
                }
                else if (Model.mission.MissionType.Equals("TIME") && Model.mission.EndDate < DateTime.Now)
                {
                    <button class="btn-ci-danger" disabled>
                        Mission Closed
                    </button>
                }
                else if (Model.mission.MissionType.Equals("GOAL") && avg >= 100)
                {
                    <button class="btn-ci-danger" disabled>
                        Mission Closed
                    </button>
                }
                else if (Model.mission.TotalSeat - Model.volunteerDetails.Count() <= 0)
                {
                    <button class="btn-ci-danger" disabled>
                        Mission Closed
                    </button>
                }
                else
                {
                    <button class="btn-ci-primary d-inline-flex align-items-center" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Apply&nbsp;&nbsp;&nbsp;<img src="~/images/right-arrow.png" alt="">
                    </button>
                }
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <span class="fs-5 text-ci-danger">
                                    <i class="bi bi-info-circle text-ci-danger"></i>
                                    Are You Sure to apply on This Mission!!
                                </span>
                                <hr />
                                <div class="row fs-5 text-start mt-3">
                                    <div class="col-4 text-end">
                                        Mission Name:
                                    </div>
                                    <div class="col-8 text-start text-muted">
                                        @Model.mission.Title
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer p-0 pe-3 py-2">
                                <button type="button" class="btn-ci-primary fs-7" onclick="location.href = '/Volunteering/Mission/ApplyMission?missionId=@Model.mission.MissionId'">
                                    Apply Now
                                </button>
                                <button type="button" class="btn-ci-secondary fs-7" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-1 mt-md-3">
        <div class="col-12 col-md-7 col-lg-8 text-muted fs-7 ps-2 ps-lg-0">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-mission-tab" data-bs-toggle="tab"
                            data-bs-target="#nav-mission" type="button" role="tab" aria-controls="nav-mission"
                            aria-selected="true">
                        Mission
                    </button>
                    <button class="nav-link" id="nav-organization-tab" data-bs-toggle="tab"
                            data-bs-target="#nav-organization" type="button" role="tab"
                            aria-controls="nav-organization" aria-selected="false">
                        Organization
                    </button>
                    <button class="nav-link" id="nav-comment-tab" data-bs-toggle="tab"
                            data-bs-target="#nav-comment" type="button" role="tab" aria-controls="nav-comment"
                            aria-selected="false">
                        Comments
                    </button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active text-muted py-3" id="nav-mission" role="tabpanel"
                     aria-labelledby="nav-mission-tab">
                    @Model.mission.Description
                    @if (Model.missionDocuments.Count() > 0)
                    {
                        <h3 class="my-2 my-md-3">Documents</h3>
                        @foreach (var i in Model.missionDocuments)
                        {
                            <div class="d-flex flex-wrap align-items-center">
                                <div class="rounded-pill text-muted border py-1 px-3 me-2 mb-2">
                                    <a href="~/doc/@i.DocumentPath/@i.DocumentName.@i.DocumentType" target="_blank">
                                        @if (i.DocumentType == "doc" || i.DocumentType == "docx" || i.DocumentType == "txt")
                                        {
                                            <img src="~/images/doc.png" alt="pdf">
                                        }
                                        else if (i.DocumentType == "xls" || i.DocumentType == "xlsx")
                                        {
                                            <img src="~/images/xlsx.png" alt="pdf">
                                        }
                                        else
                                        {
                                            <img src="~/images/pdf.png" alt="pdf">
                                        }
                                        <span class="text-muted">@i.DocumentName.@i.DocumentType</span>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="tab-pane fade py-3" id="nav-organization" role="tabpanel"
                     aria-labelledby="nav-organization-tab">
                    @Model.mission.OrganizationDetails
                </div>
                <div class="tab-pane fade py-3" id="nav-comment" role="tabpanel"
                     aria-labelledby="nav-comment-tab">
                    <div class="comment-post w-100">
                        <textarea name="comment" id="commentbox" cols="100" rows="5"
                                  class="form-control mb-3 fs-7" placeholder="Post Your Comment..."></textarea>
                        <button class="btn-ci-primary" onclick="postComment(@Model.mission.MissionId)">Post Comment</button>
                    </div>
                    <div class="comment-list mt-3">
                        @foreach (var i in Model.comments)
                        {
                            <div class="comment-box">
                                <div class="row">
                                    <div class="col-2 p-0">
                                        <div class="comment-avatar">
                                            <img src="~/images/@i.User.Avatar" />
                                        </div>
                                    </div>
                                    <div class="col-10 ps-2 ps-md-0">
                                        <div>
                                            <h6 class="m-0 p-0">@i.User.FirstName @i.User.LastName</h6>
                                            <p class="p-0 m-0 text-muted fs-time">@i.CreatedAt.ToString("dddd, MMMM dd, yyyy, hh:mm tt")</p>
                                        </div>
                                        <div class="line-h my-2 fs-6 text-dark">
                                            @i.CommentText
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-5 col-lg-4">
            <div class="row g-2">
                <div class="col-12 col-sm-6 col-md-12">
                    <div class="w-100 border p-2">
                        <div class="nav nav-tabs">
                            <button class="nav-link active" type="button" role="tab"
                                    disabled>
                                Information
                            </button>
                        </div>
                        <table id="tableRating" class="table m-0 fs-7 text-muted">
                            <tbody>
                                <tr>
                                    <td>Skills</td>
                                    <td>
                                        @foreach (var s in Model.missionSkills)
                                        {
                                            @if (s.MissionId == Model.mission.MissionId)
                                            {
                                                @s.Skill.SkillName
                                                <text>, </text>
                                            }
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>Days</td>
                                    <td>@Model.mission.Availability</td>
                                </tr>
                                <tr>
                                    <td>Rating</td>
                                    <td>
                                        <span>
                                            @for (int rr = 1; rr <= 5; rr++)
                                            {
                                                @if (Math.Ceiling(Model.sum / Model.total) >= rr)
                                                {
                                                    <img src="~/images/selected-star.png" alt="">
                                                }
                                                else
                                                {
                                                    <img src="~/images/star.png" alt="">
                                                }
                                            }
                                        </span>
                                        @if (Model.total == 0)
                                        {
                                            @:(Not Rated)
                                        }
                                        else
                                        {
                                            @:(by @Model.total volunteers)
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-12">
                    <div class="w-100 border p-2">
                        <div class="nav nav-tabs">
                            <button class="nav-link active" type="button" role="tab" disabled>
                                Recent
                                Volunteers
                            </button>
                        </div>
                        <div class="m-3">
                            <div class="row g-3 text-muted" id="recvol">
                            </div>
                        </div>
                    </div>
                    <div class="w-100 d-flex justify-content-between align-items-center border border-top-0 recent-vol-page" id="recvolpag">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<hr class="my-5">
<div class="container-lg container-fluid">
    <div class="text-center">
        <h3>
            Related Missions
        </h3>
    </div>
    <div class="d-flex flex-nowrap related-mission px-3">
        <div class="row flex-nowrap" id="relatedmission">
        </div>
    </div>
</div>


<script>
    function favunfavmissionvol(mid) {
        $.ajax({
            type: 'POST',
            url: "/Volunteer/Mission/Favourite_Mission",
            data: { 'missoinid': mid },
            success: function (res) {
                location.reload();
            },
            error: function (data) {
                toastr.error("Please Login First", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    }
    function missionrating(mid,rat) {
        $.ajax({
            type: 'POST',
            url: "/Volunteer/Mission/Rating_Mission",
            data: { 'missoinid': mid , 'rat':rat },
            success: function (res) {
                location.reload();
            },
            error: function (data) {
                toastr.error("Please Login First", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    }
    function postComment(mid){
        var ctext = document.getElementById("commentbox").value;
        if(ctext != ""){
            $.ajax({
                type: 'POST',
                url: "/Volunteer/Mission/Post_Comment",
                data: { 'missoinid': mid , 'commenttext':ctext },
                success: function (res) {
                    document.getElementById("commentbox").value = "";
                    toastr.success("Your Comment Posted Successfully, You can see Your Comment in list after Approval", "Success Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
                },
                error: function (data) {
                    toastr.error("Please Login First", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
                }
            });
        }
        else{
            toastr.error("Comment Field is Required", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
        }
    }

    function volpag(fpg) {
        $.ajax({
            type: 'POST',
            url: "/Volunteer/Mission/GetVolunteer",
            data: { 'mid': @Model.mission.MissionId, 'pg': fpg },
            success: function (res) {
                $('#recvol').html($($.parseHTML(res)).filter("#parrecvol")[0].innerHTML);
                $('#recvolpag').html($($.parseHTML(res)).filter("#parrecvolpag")[0].innerHTML);
            },
            error: function (data) {
                toastr.error("Error in recent volunteer", "Error Message", { timeOut: 5000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    }
</script>
