@model Story
<link rel="stylesheet" href="~/css/imageUploder.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/story_page.css">

<div class="container-lg container-fluid mt-3">
    <form enctype="multipart/form-data" method="post">
        <h1 class="text-muted">Share your story</h1>
        <div class="row text-muted">
            <div class="col-12 col-sm-6">
                <label class="form-label mt-3">Select Mission</label>
                <select class="form-select text-muted" asp-for="MissionId" asp-items="ViewBag.MissionId">
                </select>
            </div>
            <div class="col-12 col-sm-6">
                <label class="form-label mt-3" asp-for="Title">My Story Title</label>
                <input type="text" class="form-control text-muted" placeholder="Enter story title" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row text-muted">
            <div class="col-12">
                <label class="form-label mt-3" asp-for="ShortDescription">Short Description</label>
                <input type="text" class="form-control text-muted" placeholder="Enter Short Description" asp-for="ShortDescription" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="row text-muted">
            <div class="col-12">
                <label class="form-label mt-3">My Story</label>
                <textarea asp-for="Description" id="editor">
                </textarea>
                <div class="w-100 border border-top-0 ck-toolbar" style="height:25px; border-color:#ccced1!important;">
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
