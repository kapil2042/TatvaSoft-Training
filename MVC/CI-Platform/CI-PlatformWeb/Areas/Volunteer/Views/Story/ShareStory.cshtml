            <div class="col-12">
            <label class="form-label mt-3">Enter Video URL</label>
            <input type="text" class="form-control text-muted" placeholder="Enter your url" />
            </div>
            </div>*@
        <div class="row text-muted drag-area">
            @*<div class="col-12">
                <label class="form-label mt-3">Upload your Photos</label>
                <div class="position-relative image-uploder">
                <label for="filestory" class="image-uploder-box">
                <span><img src="~/images/plus.png" /></span>
                <span class="m-0 fs-7">Drag And Drop Pictures here</span>
                </label>
                <input name="file" type="file" id="filestory" class="form-control text-muted" multiple hidden />
                </div>
                </div>
                <div class="col-12 img-container">
                </div>*@
            <div class="field">
                <label class="form-label mt-3">Upload your Photos</label>
                <lable class="input-images d-block"></lable>
            </div>
            @if (ViewBag.imgerr != null)
            {
                <span class="text-danger">@ViewBag.imgerr</span>
            }
        </div>
        <div class="row my-3">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <a class="btn-ci-secondary" asp-action="Story" asp-controller="Story" asp-area="Volunteer">Cancel</a>
                <div class="d-flex">
                    <input type="submit" class="btn-ci-primary me-2" name="action" value="Save" />
                    <input type="submit" class="btn-ci-primary" name="action" value="Submit" />
                </div>
            </div>
        </div>
    </form>
</div>



