                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/calender.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">Date</div>
                            <div class="line-h">
                                @if (Model.mission.MissionType.Equals("GOAL") && avg < 100)
                                {
                                    @:Ongoing Opportunity
                                }
                                else if (Model.mission.StartDate < DateTime.Now && Model.mission.EndDate > DateTime.Now && Model.mission.MissionType.Equals("TIME"))
                                {
                                    @:Ongoing Opportunity
                                }
                                else
                                {
                                    @Model.mission.StartDate.Value.ToShortDateString() @:To @Model.mission.EndDate.Value.ToShortDateString()
