<script>
    function favunfavmissionvol(mid) {
        $.ajax({
            type: 'POST',
            url: "/Volunteer/Home/Favourite_Mission",
            data: { 'missoinid': mid },
            success: function (res) {
                location.reload();
            },
            error: function (data) {
                toastr.error("Please Login First", "Error Message", { timeOut: 3000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    }
    function missionrating(mid,rat) {
        $.ajax({
            type: 'POST',
            url: "/Volunteer/Home/Rating_Mission",
            data: { 'missoinid': mid , 'rat':rat },
            success: function (res) {
                location.reload();
            },
            error: function (data) {
                toastr.error("Please Login First", "Error Message", { timeOut: 3000, "positionClass": "toast-bottom-right", "closeButton": true, "progressBar": true });
            }
        });
    }
</script>