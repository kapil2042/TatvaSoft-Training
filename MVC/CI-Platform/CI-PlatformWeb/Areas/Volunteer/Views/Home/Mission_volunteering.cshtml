                        <div class="position-absolute top-0 mt-1">
                            <img src="~/images/organization.png" alt="">
                        </div>
                        <div class="position-absolute bottom-0 mb-1">
                            <div class="text-secondary fs-7">Organization</div>
                            <div class="line-h">@Model.mission.OrganizationName</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-100 text-center mt-3">
                @if (Model.missionApplicatoin != null)
