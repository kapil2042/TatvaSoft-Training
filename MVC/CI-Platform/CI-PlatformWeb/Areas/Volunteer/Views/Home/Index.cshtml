@{
    ViewData["Title"] = "Home Page";
}
@model VMMissions

<link rel="stylesheet" href="~/css/mission_page.css" asp-append-version="true" />
<partial name="filter" model="Model"></partial>

<partial name="secondNav" model="Model"></partial>
@if (ViewBag.nomission == 1)
{
    <div class="text-center pt-3">

        <h2 class="mb-3">No Mission Found</h2>

        <button class="btn-ci-primary">Submit New Mission&nbsp;&nbsp;&nbsp;<img src="~/images/right-arrow.png" alt=""></button>
    </div>
}
else
{

    <div class="container-lg container-fluid py-3">
        <div class="d-flex flex-wrap align-items-center" id="filterlist">
            <span class="fs-7 border px-2 rounded-pill text-secondary d-inline-flex align-items-center">
                Tree Plant
                <a href="">
                    <img src="~/images/cancel.png" alt="" class="ms-2">
                </a>
            </span>
            <span>
                <a href="" class="text-secondary ms-2 fs-7">Clear all</a>
            </span>
        </div>
    </div>
    <div class="container-lg container-fluid">
        <div class="d-inline-flex align-items-center justify-content-between w-100">
            <div class="fs-3">Explore <strong>@ViewBag.count</strong> missions</div>
            <div class="d-none d-sm-block">
                <select class="sort-by my-1 me-3" onchange="location.href = '/Volunteer/Home/Index/'+this.value;">
                    <option value="">Sort By</option>
                    <option value="AZ">A To Z</option>
                    <option value="ZA">Z To A</option>
                    <option value="NEW">Newest First</option>
                    <option value="OLD">Oldest First</option>
                </select>
                <button class="p-2 border-0 bg-white rounded-circle grid-active" id="grid">
                    <img src="~/images/grid.png"
                     alt="">
                </button>
                <button class="p-2 border-0 bg-white rounded-circle" id="list">
                    <img src="~/images/list.png"
                     alt="">
                </button>
            </div>
        </div>
    </div>
    <div class="container-lg container-fluid">
        <div class="row">
            @foreach (var i in Model.mission)
            {
                <div class="col-12 col-sm-6 col-lg-4 missions-view mt-3 mb-3 d-flex align-items-stretch">
                    <a asp-area="Volunteer" asp-action="Mission_volunteering" asp-controller="Home" asp-route-id="@i.MissionId">
                        <div class="card h-100">
                            <div class="row list position-relative card-min-h">
                                <div class="col-listview-img col-12">
                                    <div class="position-relative w-100 h-100">
                                        <div class="city-name">
                                            <img src="~/images/pin.png" alt="" class="w-100 h-100">
                                            <p>@i.City.Name</p>
                                        </div>
                                        <button class="like-mission">
                                            <img src="~/images/heart.png" alt="" class="w-100 h-100">
                                        </button>
                                        <button class="share-mission">
                                            <img src="~/images/user.png" alt="" class="w-100 h-100">
                                        </button>
                                        <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png" class="card-img-top" alt="a">
                                        <div class="w-100 position-relative d-flex justify-content-center">
                                            <div class="theme-mission">
                                                @i.Theme.Title
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-listview-body col-12">
                                    <div class="card-body">
                                        <h5 class="card-title">@i.Title</h5>
                                        <p class="card-text">
                                            @i.ShortDescription
                                        </p>
                                        <div class="rating">
                                            <div class="h-100">
                                                <img src="~/images/pin1.png" alt="pin1" class="d-none">
                                                <span class="pin d-none">@i.Country.Name</span>
                                                <img src="~/images/web.png" alt="web" class="d-none">
                                                <span class="theme d-none">@i.Theme.Title</span>
                                                <img src="~/images/organization.png" alt="organization" class="d-none">
                                                <span class="orga">@i.OrganizationName</span>
                                            </div>
                                            <span class="rating-img">
                                                @{
                                                    var sumr = Model.missionRatings.Where(x => x.MissionId == i.MissionId).Select(x => x.Rating).ToList().Sum();
                                                    var g = Model.missionRatings.Where(x => x.MissionId == i.MissionId).ToList().Count();
                                                    var r = Math.Ceiling(Convert.ToDouble(sumr) / Convert.ToDouble(g));
                                                    @if (r > 0)
                                                    {
                                                        for (int rr = 1; rr <= r; rr++)
                                                        {
                                                            <img src="~/images/selected-star.png" alt="">
                                                        }
                                                        for (int rr = 1; rr <= (5 - r); rr++)
                                                        {
                                                            <img src="~/images/star.png" alt="">
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <img src="~/images/star.png" alt="">
                                                        <img src="~/images/star.png" alt="">
                                                        <img src="~/images/star.png" alt="">
                                                        <img src="~/images/star.png" alt="">
                                                        <img src="~/images/star.png" alt="">
                                                    }
                                                }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="time-goal">
                                        <hr>
                                        <div class="timeline">
                                            @if (@i.MissionType == "TIME")
                                            {
                                                <div class="fs-7">
                                                    From @i.StartDate.Value.ToShortDateString() until @i.EndDate.Value.ToShortDateString()
                                                </div>
                                            }
                                            else
                                            {
                                                @foreach (var j in Model.goal)
                                                {
                                                    @if (j.MissionId == i.MissionId)
                                                    {
                                                        <div class="fs-7">
                                                            @j.GoalObjectiveText
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                        <div class="seat-left m-3 mt-4 d-flex justify-content-between align-content-center">
                                            <div class="d-flex justify-content-between flex-wrap p-0 m-0 h-100 w-100">
                                                <div class="d-flex align-items-center h-100 seat-listview">
                                                    <div class="px-2">
                                                        <img src="~/images/Seats-left.png" alt="">
                                                    </div>
                                                    <div class="seat">
                                                        <h6 class="p-0 m-0">10</h6>
                                                        <span class="fs-7">Seats left</span>
                                                    </div>
                                                </div>
                                                @{
                                                    var a1 = Model.timesheet.Where(x => x.MissionId == i.MissionId).Sum(x => x.Action);
                                                    var b1 = Model.goal.Where(x => x.MissionId == i.MissionId).Select(x => x.GoalValue).FirstOrDefault();
                                                }
                                                <div class="d-flex align-items-center deadline-listview">
                                                    @if (@i.MissionType == "TIME")
                                                    {
                                                        <div class="px-2">
                                                            <img src="~/images/deadline.png" alt="">
                                                        </div>
                                                        <div class="deadline">
                                                            <h6 class="p-0 m-0">@i.StartDate.Value.AddDays(-1).ToShortDateString()</h6>
                                                            <span class="fs-7">Deadline</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        @foreach (var j in Model.goal)
                                                        {
                                                            @if (j.MissionId == i.MissionId)
                                                            {
                                                                <div class="px-2">
                                                                    <img src="~/images/achieved.png" alt="">
                                                                </div>
                                                                <div class="deadline">
                                                                    <div class="progress rounded-pill">
                                                                        <div class="progress-bar bg-ci-primary" role="progressbar" style="width: @(Convert.ToDouble(a1)/Convert.ToDouble(b1)*100)%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                                    </div>
                                                                    <span class="fs-7">@a1 Achieved</span>
                                                                </div>
                                                            }
                                                        }
                                                    }
                                                </div>
                                                <div class="d-none align-items-center h-100 range-listview">
                                                    <div class="px-2">
                                                        <img src="~/images/calender.png" alt="">
                                                    </div>
                                                    <div class="range">
                                                        <h6 class="p-0 m-0">From @i.StartDate.Value.ToShortDateString()</h6>
                                                        <h6 class="p-0 m-0">Until @i.EndDate.Value.ToShortDateString()</h6>
                                                    </div>
                                                </div>
                                                <div class="d-none align-items-center h-100 skill-listview">
                                                    <div class="px-2">
                                                        <img src="~/images/skill.png" alt="">
                                                    </div>
                                                    <div class="skill">
                                                        <h6 class="p-0 m-0">Skills</h6>
                                                        <span class="fs-7 text-wrap">
                                                            @foreach (var s in Model.missionSkills)
                                                            {
                                                                @if (s.MissionId == i.MissionId)
                                                                {
                                                                    @s.Skill.SkillName
                                                                    <text> </text>
                                                                }
                                                            }
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-none button-listview align-items-center pe-2">
                                                <div class="listview-button">
                                                    <button class="btn-ci-primary d-inline-flex align-items-center">
                                                        Apply&nbsp;&nbsp;&nbsp;<img src="~/images/right-arrow.png" alt="">
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-2">
                                        <div class="text-center pb-2 button">
                                            <button class="btn-ci-primary">
                                                Apply&nbsp;&nbsp;&nbsp;<img src="~/images/right-arrow.png" alt="">
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>



    VMPager pager = new VMPager();
    int pageNo = 0;
    if (ViewBag.pager != null)
    {
        pager = ViewBag.pager;
        pageNo = pager.CurrentPage;
    }


    @if (pager.TotalPages > 0)
    {
        <nav aria-label="Page" class="my-4">
            <ul class="pagination-sm pagination justify-content-center">
                @if (pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous" asp-area="Volunteer" asp-action="Index" asp-controller="Home" asp-route-pg="1">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" aria-label="Previous" asp-area="Volunteer" asp-action="Index" asp-controller="Home" asp-route-pg="@(pager.CurrentPage-1)">
                            <span aria-hidden="true">&lsaquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link disabled">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link disabled">
                            <span aria-hidden="true">&lsaquo;</span>
                        </a>
                    </li>
                }
                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item"><a class="page-link @(pge==pager.CurrentPage ? "active":"")" asp-area="Volunteer" asp-action="Index" asp-controller="Home" asp-route-pg="@pge">@pge</a></li>
                }
                @if (pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" aria-label="Next" asp-area="Volunteer" asp-action="Index" asp-controller="Home" asp-route-pg="@(pager.CurrentPage+1)">
                            <span aria-hidden="true">&rsaquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" aria-label="Next" asp-area="Volunteer" asp-action="Index" asp-controller="Home" asp-route-pg="@(pager.TotalPages)">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link disabled">
                            <span aria-hidden="true">&rsaquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link disabled">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}