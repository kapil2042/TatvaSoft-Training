@{
    Layout = "~/Views/Shared/_Login_layout.cshtml";
}

<div class="w-100 p-5 privacy d-flex align-items-center">
    <form action="#" method="post" class="w-100">
        <div class="mb-3">
            <label for="email-id" class="form-label">Email Address</label>
            <input type="email" name="email" id="email-id" class="form-control"
                   placeholder="abc@xyz.com" required>
        </div>
        <div class="mb-3 position-relative">
            <label for="login-pass" class="form-label">Password</label>
            <input type="password" class="form-control" name="pass" id="login-pass"
                   placeholder="**********" required>
            <span onmouseover="showPass('login-pass')" onmouseout="hidePass('login-pass')">
                <img src="~/images/eye.png" alt="eye" class="eye">
            </span>
        </div>
        <button type="submit" class="btn-ci-primary mt-2 w-100">Login</button>
        <div class="text-center">
            <label class="mt-3"><a asp-area="User" asp-controller="Login" asp-action="ForgotPass">Lost your password?</a></label>
            <br>
            <label class="fs-6 mt-3">
                Don't have an account?<a asp-area="User" asp-controller="Login" asp-action="Registration">
                    Create
                    Account
                </a>
            </label>
        </div>
    </form>
</div>