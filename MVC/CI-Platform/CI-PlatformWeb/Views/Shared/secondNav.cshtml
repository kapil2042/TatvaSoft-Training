<div class="border-bottom shadow-sm mb-1 mb-sm-3">
    <div class="container-lg container-fluid">
        <div class="row align-items-center align-items-sm-stretch">
            <div class="col-10 col-md-6 col-sm-4">
                <div class="my-2 position-relative d-flex">
                    <label for="search">
                        <img src="~/images/search.png" alt="search" class="search-icon">
                    </label>
                    <form onsubmit="return false" class="w-100">
                        <input type="search" name="search" id="searchInput" class="search-box border-0"
                               placeholder="Search mission..." onkeyup="myfilter(fpg = 1, fid = 0);">
                    </form>
                </div>
            </div>
            <div class="col-2 d-block d-sm-none py-1">
                <button class="p-1 filter-btn rounded-3 bg-white" id="filtertoggle" onclick="openfilter()">
                    <img src="~/images/filter.png" alt="filter" width="24" height="24">
                </button>
            </div>
            <div class="col-12 col-md-6 col-sm-8 d-none d-sm-block">
                <div class="row h-100">
                    <div class="col-3 dropdown d-flex align-items-center border-start px-1 px-sm-2">
                        <div class="w-100 dropdown-toggle d-inline-flex justify-content-between align-items-center"
                             role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="pe-1 text-secondary">Country</span>
                            <img src="~/images/drop-down.png" />
                        </div>
                        <ul class="dropdown-menu m-height">
                            @foreach (var i in Model.countries)
                            {
                                <li>
                                    <a class="dropdown-item countryname" id="@i.CountryId" onclick="citybycountry(this.id)">@i.Name</a>
                                    @*<a class="dropdown-item" href="#">
                                        <div class="form-check">
                                        <input class="form-check-input" name="country" type="checkbox" value="@i.Name" id="Checkme + @i.CountryId" />
                                        <label class="form-check-label" for="Checkme + @i.CountryId">@i.Name</label>
                                        </div>
                                        </a>*@
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-3 dropdown d-flex align-items-center border-start px-1 px-sm-2">
                        <div class="w-100 dropdown-toggle d-inline-flex justify-content-between align-items-center"
                             role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="pe-1 text-secondary">City</span>
                            <img src="~/images/drop-down.png" />
                        </div>
                        <ul class="dropdown-menu m-height" id="citieslist2">
                        </ul>
                    </div>
                    <div class="col-3 dropdown d-flex align-items-center border-start px-1 px-sm-2">
                        <div class="w-100 dropdown-toggle d-inline-flex justify-content-between align-items-center"
                             role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="pe-1 text-secondary">Theme</span>
                            <img src="~/images/drop-down.png" />
                        </div>
                        <ul class="dropdown-menu m-height">
                            @foreach (var i in Model.themes)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="form-check">
                                            <input class="form-check-input otherthencity" name="theme" type="checkbox" value="@i.Title" id="Checkme + @i.MissionThemeId" onchange="myfilter(fpg = 1, fid = 0)"/>
                                            <label class="form-check-label" for="Checkme + @i.MissionThemeId">@i.Title</label>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-3 dropdown d-flex align-items-center border-start border-end px-1 px-sm-2">
                        <div class="w-100 dropdown-toggle d-inline-flex justify-content-between align-items-center"
                             role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="pe-1 text-secondary">Skills</span>
                            <img src="~/images/drop-down.png" />
                        </div>
                        <ul class="dropdown-menu m-height">
                            @foreach (var i in Model.skills)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="form-check">
                                            <input class="form-check-input otherthencity" name="skill" type="checkbox" value="@i.SkillName" id="Checkme + @i.SkillId" onchange="myfilter(fpg = 1, fid = 0)" />
                                            <label class="form-check-label" for="Checkme + @i.SkillId">@i.SkillName</label>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>