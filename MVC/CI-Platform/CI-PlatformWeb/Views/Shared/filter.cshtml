<div id="myfilter" class="overlay">
    <a class="closefilter closebtn" onclick="closefilter()">&times;</a>
    <div class="overlay-content">
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Country</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.countries)
                {
                    <li>
                        @*<a class="dropdown-item countryname" id="@i.CountryId" onclick="citybycountry(this.id)">@i.Name</a>*@
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input country" name="country" type="radio" value="@i.Name" id="@i.CountryId" onchange="citybycountry(this.id)" autocomplete="off" />
                                    @i.Name
                                </label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">City</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu" id="citieslist1">
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Theme</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.themes)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input otherthencity" name="theme" type="checkbox" value="@i.Title" id="Checkme + @i.MissionThemeId" autocomplete="off" />
                                    @i.Title
                                </label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Skills</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.skills)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input otherthencity" name="skill" type="checkbox" value="@i.SkillName" id="Checkme + @i.SkillId" autocomplete="off" />
                                    @i.SkillName
                                </label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Sort By</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                <li>
                    <label class="w-100">
                        <a class="dropdown-item fs-6 px-3" onclick="myfilter(fpg = 1, fid = 1);">A To Z</a>
                    </label>
                </li>
                <li>
                    <label class="w-100">
                        <a class="dropdown-item fs-6 px-3" onclick="myfilter(fpg = 1, fid = 2);">Z To A</a>
                    </label>
                </li>
                <li>
                    <label class="w-100">
                        <a class="dropdown-item fs-6 px-3" onclick="myfilter(fpg = 1, fid = 3);">Newest First</a>
                    </label>
                </li>
                <li>
                    <label class="w-100">
                        <a class="dropdown-item fs-6 px-3" onclick="myfilter(fpg = 1, fid = 4);">Oldest First</a>
                    </label>
                </li>
            </ul>
        </div>
    </div>
</div>


<script src="~/js/filter.js" asp-append-version="true"></script>