<div id="myfilter" class="overlay">
    <a class="closefilter closebtn" onclick="closefilter()">&times;</a>
    <div class="overlay-content">
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Country</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.countries)
                {
                    <li>
                        <a class="dropdown-item" id="@i.CountryId" onclick="citybycountry(this.id)">@i.Name</a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">City</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu" id="citieslist1">
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Theme</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.themes)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input otherthencity" name="theme" type="checkbox" value="@i.Title" id="Checkme + @i.MissionThemeId" onchange="myfilter(fpg = 1, fid = 0)"/>
                                <label class="form-check-label" for="Checkme + @i.MissionThemeId">@i.Title</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Skills</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                @foreach (var i in Model.skills)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input otherthencity" name="skill" type="checkbox" value="@i.SkillName" id="Checkme + @i.SkillId" onchange="myfilter(fpg = 1, fid = 0)"/>
                                <label class="form-check-label" for="Checkme + @i.SkillId">@i.SkillName</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="dropdown">
            <a class="dropdown-toggle d-inline-flex justify-content-between align-items-center"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="pe-1">Sort By</span>
                <img src="~/images/drop-down.png" />
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-route-sort="AZ" asp-area="Volunteer" asp-action="Index" asp-controller="Home">A To Z</a>
                </li>
                <li>
                    <a asp-route-sort="ZA" asp-area="Volunteer" asp-action="Index" asp-controller="Home">Z To A</a>
                </li>
                <li>
                    <a asp-route-sort="NEW" asp-area="Volunteer" asp-action="Index" asp-controller="Home">Newest First</a>
                </li>
                <li>
                    <a asp-route-sort="OLD" asp-area="Volunteer" asp-action="Index" asp-controller="Home">Oldest First</a>
                </li>
            </ul>
        </div>
    </div>
</div>


<script src="~/js/filter.js" asp-append-version="true"></script>