@{
    var banner = (List<Banner>)ViewBag.banner;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LoginPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login_layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body>
    <div class="container-fluid p-0 m-0 position-relative">
        <div class="row-res row m-0 justify-content-between align-items-center">
            <div class="col-12 col-lg-9 p-0 h-100">
                <div id="loginCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                    <ol class="carousel-indicators d-lg-flex d-none">
                        @if (banner != null)
                        {
                            int cnt = 0;
                            @foreach (var i in banner)
                            {
                                <li data-bs-target="#loginCarousel" data-bs-slide-to="@cnt" class="@(cnt==0?"active":"")" aria-current="true" aria-label="First slide"></li>
                                cnt = cnt + 1;
                            }
                        }
                        else
                        {
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="0" class="active" aria-current="true"
                            aria-label="First slide"></li>
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="1" aria-label="Second slide"></li>
                            <li data-bs-target="#loginCarousel" data-bs-slide-to="2" aria-label="Third slide"></li>
                        }
                    </ol>
                    <div class="carousel-inner h-100" role="listbox">
                        @if (banner != null)
                        {
                            int cnt = 0;
                            foreach (var i in banner)
                            {
                                <div class="carousel-item @(cnt==0?"active":"") h-100">
                                    <img src="~/images/banners/@i.Image" class="w-100 d-block h-100" alt="First slide">
                                    <div class="carousel-caption d-block">
                                        <h1>@i.Title</h1>
                                        <p class="fs-6">
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                                cnt = cnt + 1;
                            }
                        }
                        else
                        {
                            <div class="carousel-item active h-100">
                                <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                                 class="w-100 d-block h-100" alt="First slide">
                                <div class="carousel-caption d-block">
