                                        officia deserunt mollit anim id est laborum.
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3 p-0 h-100">
                @RenderBody()
                <div class="text-center">
                    <label>
                        <a asp-action="Privacy" asp-controller="Home" asp-area="Volunteer">Privacy Policy</a>
                    </label>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/name._validate.js" asp-append-version="true"></script>
    <script src="~/js/phone_validate.js" asp-append-version="true"></script>
    <script src="~/js/password_hide_show.js" asp-append-version="true"></script>
    <script src="~/js/match_pass.js" asp-append-version="true"></script>
    <script src="~/js/emailValidate.js" asp-append-version="true"></script>
    <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(()=>{
        @if (ViewBag.error != null)
        {
            @:toastr.error("@ViewBag.error", "Error Message",{ timeOut: 5000, "positionClass": "toast-top-right","closeButton": true,"progressBar": true});
        }
        @if (ViewBag.success != null)
        {
            @:toastr.success("@ViewBag.success", "Success Message",{ timeOut: 5000, "positionClass": "toast-top-right","closeButton": true,"progressBar": true});
        }
        });
    </script>
    <partial name="_ValidationScriptsPartial"/>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>